{% extends 'base.html.twig' %}

{% block title %}Profile
{% endblock %}

{% block body %}

	<div class="container mx-auto py-6">
		<div class="flex justify-center max-w-lg w-3/6">
			<div class="p-6">
				<h1 class="text-4xl mb-6 text-blue">Mon profile</h1>
				<div class="border-b border-gray-200 pb-4 mb-4">
					<p class="text-sm text-white mb-2">
						<span class="font-semibold text-purple">Email :</span>
						{{ user.email }}</p>
					<p class="text-sm text-white mb-2">
						<span class="font-semibold  text-purple">Prénom :</span>
						{{ user.firstName }}</p>
					<p class="text-sm text-white mb-2">
						<span class="font-semibold  text-purple">Nom :</span>
						{{ user.lastName }}</p>
					<p class="text-sm text-white mb-2">
						<span class="font-semibold  text-purple">Téléphone :</span>
						{{ user.phoneNumber }}</p>
					<p class="text-sm text-white mb-2">
						<span class="font-semibold  text-purple">Job :</span>
						{{ user.job }}</p>
				</div>
				<div>
					{% if user.cv %}
						<embed src="{{ asset('uploads/cv/' ~ user.cv) }}" type="application/pdf" width="500px" height="200px"/>
					{% else %}
						<p class="text-sm text-purple">Pas de CV téléchargé</p>
					{% endif %}
					<a href="{{ path('app_profile_edit', {'id': user.id}) }}">
						<button type="button" class="rounded mt-4 px-4 py-2 bg-white text-blue font-semibold">Modifier</button>
					</a>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
