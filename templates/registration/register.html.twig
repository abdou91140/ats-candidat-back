{% extends 'base.html.twig' %}

{% block title %}Register
{% endblock %}
{% block body %}
	{% for flash_error in app.flashes('verify_email_error') %}
		<div class="alert alert-danger" role="alert">{{ flash_error }}</div>
	{% endfor %}

	<div class="flex w-full justify-center items-center mt-8 ">
		<div class="w-full max-w-md text-blue p-6 rounded-lg mt-8">
			<h1 class="text-4xl mb-6">Cr√©er ton profil</h1>

			{{ form_errors(registrationForm) }}

			{{ form_start(registrationForm) }}
			{{ form_row(registrationForm.email, {'attr': {'class': 'mb-4 w-full px-4 py-2 border rounded'}}) }}
			{{ form_row(registrationForm.plainPassword, {
                    label: 'Password',
                    'attr': {'class': 'mb-4 w-full px-4 py-2 border rounded'}
                }) }}
			<div class="mb-4">
				{{ form_row(registrationForm.agreeTerms) }}
			</div>

			<button type="submit" class="bg-white text-blue px-4 py-2 rounded w-full">Enregistrer</button>
			{{ form_end(registrationForm) }}
		</div>
	</div>
{% endblock %}
