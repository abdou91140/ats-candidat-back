{% extends 'base.html.twig' %}

{% block title %}
	Contact index
{% endblock %}

{% block body %}
	<div class="flex justify-center items-center text-blue">
		<div class="max-w-2xl w-full p-6 rounded-lg shadow-md">
			<h1 class="text-4xl mb-6">Liste contacts</h1>
			<button type="button" class="rounded px-4 bg-white text-blue font-semibold">
				<a href="{{ path('app_contact_new') }}" class="inline-block px-4 text-blue-500 hover:underline bg-white">Créer contact</a>
			</button>

			<table class="table-auto w-full">
				<thead>
					<tr>
						<th class="px-4 py-2 text-purple">Startup</th>
						<th class="px-4 py-2 text-purple">Nom prénom</th>
						<th class="px-4 py-2 text-purple">Linkedin</th>
						<th class="px-4 py-2 text-purple">Actions</th>
					</tr>
				</thead>
				<tbody>
					{% for contact in contacts %}
						<tr>
							<td class="px-4 py-2 text-white">{{ contact.company.name }}</td>

							<td class="px-4 py-2 text-white">{{ contact.fullname }}</td>
							<td class="text-white">
								<a target="_blank" href="https://www.google.com/search?q=Linkedin {{ contact.fullname }} {{contact.company.name }}">Lien
								</a>
							</td>
							<td class="flex justify-center px-4 py-2">
								<a href="{{ path('app_contact_edit', { id: contact.id }) }}" class="text-blue hover:underline">
									<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewbox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
										<path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L10.582 16.07a4.5 4.5 0 0 1-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 0 1 1.13-1.897l8.932-8.931Zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0 1 15.75 21H5.25A2.25 2.25 0 0 1 3 18.75V8.25A2.25 2.25 0 0 1 5.25 6H10"/>
									</svg>

								</a>
								<form method="post" action="{{ path('app_contact_delete', { id: contact.id }) }}" class="text-blue hover:underline">
									<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ contact.id) }}">
									<button type="submit">
										<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewbox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
											<path stroke-linecap="round" stroke-linejoin="round" d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0"/>
										</svg>
									</button>
								</form>
							</td>
						</tr>
					{% else %}
						<tr>
							<td class="px-4 py-2">No records found</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
	</div>
{% endblock %}
